    <TextView
        android:id="@+id/textView_ans1"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:text="ans 1"
        android:layout_x="867dp"
        android:layout_y="141dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:gravity="end"/>

    <TextView
        android:id="@+id/textView_ans2"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:text="ans 2"
        android:layout_x="867dp"
        android:layout_y="281dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:gravity="end"/>

    <TextView
        android:id="@+id/textView_ans3"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:text="ans 3"
        android:layout_x="867dp"
        android:layout_y="421dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:gravity="end"/>

    <ImageButton
        android:id="@+id/imageButton_leave"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_x="60dp"
        android:layout_y="632dp"
        android:src="@drawable/btn_760_px_border_white"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/imageButton_reject"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_x="450dp"
        android:layout_y="632dp"
        android:src="@drawable/btn_760_px_color_blue"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/imageButton_accept"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_x="840dp"
        android:layout_y="632dp"
        android:src="@drawable/btn_760_px_color_yellow"
        android:background="#00000000" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="312.5dp"
        android:layout_height="39.5dp"
        android:text="我要離開"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_y="649dp"
        android:layout_x="93.5dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="312.5dp"
        android:layout_height="39.5dp"
        android:text="有錯，重來吧"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_y="649dp"
        android:layout_x="483.5dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="312.5dp"
        android:layout_height="39.5dp"
        android:text="非常正確"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_y="649dp"
        android:layout_x="873.5dp" />


