<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="1124dp"
        android:layout_height="51dp"
        android:layout_y="23dp"
        android:layout_x="78dp"
        android:gravity="center"
        android:text="你好，我是Juicy"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="212dp"
        android:layout_height="182dp"
        android:layout_x="562dp"
        android:layout_y="167dp"
        android:src="@drawable/illustration" />

    <TextView
        android:id="@+id/textView_question"
        android:layout_width="1124dp"
        android:layout_height="51dp"
        android:layout_y="390dp"
        android:layout_x="78dp"
        android:gravity="center"
        android:text="我想為你做一些理財建議，你願意嗎？"
        android:textColor="#ffc51d"
        android:textSize="36sp" />


    <ImageButton
        android:id="@+id/button_accept"
        android:layout_width="575dp"
        android:layout_height="73dp"
        android:layout_x="63dp"
        android:layout_y="624dp"
        android:background="#00000000"
        android:src="@drawable/btn_1150_px_border_white" />

    <ImageButton
        android:id="@+id/button_reject"
        android:layout_width="575dp"
        android:layout_height="73dp"
        android:layout_x="653dp"
        android:layout_y="632dp"
        android:background="#00000000"
        android:src="@drawable/btn_1150_px_color_yellow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="473dp"
        android:layout_height="39.5dp"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_x="111dp"
        android:layout_y="649dp"
        tools:text="好，開始吧" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="473dp"
        android:layout_height="39.5dp"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_x="696dp"
        android:layout_y="649dp"
        tools:text="我不想" />


</AbsoluteLayout>